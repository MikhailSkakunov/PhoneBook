<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:pro="http://www.liquibase.org/xml/ns/pro"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
        http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd">
    <changeSet id="0001" author="Mike">
        <createTable tableName="persons">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="first_name" type="varchar(100)">
            <constraints nullable="false" />
            </column>
            <column name="surname" type="varchar(100)">
                <constraints nullable="false" />
            </column>
            <column name="patronymic" type="varchar(100)">
                <constraints nullable="false" />
            </column>
        </createTable>

        <createTable tableName="addresses">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="city" type="varchar(30)">
                <constraints nullable="false" />
            </column>
            <column name="building_number" type="varchar(10)">
                <constraints nullable="false" />
            </column>
            <column name="person_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="street_id" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <createTable tableName="phone_types">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="type_name" type="varchar(30)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="streets">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="street_name" type="varchar(30)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createTable tableName="phones">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true"/>
            </column>
            <column name="number" type="varchar(30)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="person_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="type_id" type="int">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseColumnNames="id" baseTableName="addresses" constraintName="person_id" referencedColumnNames="id" referencedTableName="persons" />
        <addForeignKeyConstraint baseColumnNames="id" baseTableName="addresses" constraintName="street_id" referencedColumnNames="id" referencedTableName="streets" />

        <addForeignKeyConstraint baseColumnNames="id" baseTableName="phones" constraintName="person_id" referencedColumnNames="id" referencedTableName="persons" />
        <addForeignKeyConstraint baseColumnNames="id" baseTableName="phones" constraintName="type_id" referencedColumnNames="id" referencedTableName="phone_types" />
    </changeSet>

    <changeSet id="0002" author="Mike">
        <insert tableName="streets">
            <column name="street_name" value="Свободы"/>
        </insert>
        <insert tableName="streets">
            <column name="street_name" value="Сахарова"/>
        </insert>
        <insert tableName="streets">
            <column name="street_name" value="Панина"/>
        </insert>
        <insert tableName="streets">
            <column name="street_name" value="Первомайская"/>
        </insert>

        <insert tableName="phone_types">
            <column name="type_name" value="мобильный"/>
        </insert>
        <insert tableName="phone_types">
            <column name="type_name" value="корпоративный"/>
        </insert>
        <insert tableName="phone_types">
            <column name="type_name" value="домашний"/>
        </insert>
    </changeSet>
</databaseChangeLog>